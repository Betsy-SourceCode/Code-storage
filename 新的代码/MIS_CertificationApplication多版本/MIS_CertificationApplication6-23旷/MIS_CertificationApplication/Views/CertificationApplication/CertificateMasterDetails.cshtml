
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/Alert美化弹出框/sweetalert.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/layui/layui/modules/layer.js"></script>
    <script src="~/Scripts/AngularJS.js"></script>
    <script src="~/Scripts/PageJS/CertificateUpdate.js"></script>
    <script src="~/Scripts/PageJS/AddCertificates.js"></script>
    <script src="~/Scripts/Alert美化弹出框/sweetalert-2.1.2.min.js"></script>
    <style>
        /*新增-标题字体加大加粗*/
        .layui-layer-title {
            font-size: 20px;
            font-weight: 600;
            text-align: center;
        }
        .text {
            padding: 10px 0px;
            display: inline-block;
            border-bottom: 1px solid black;
            width: 71%;
            background-color: lightgray
        }
        .textVoid {
            padding: 10px 0px;
            display: inline-block;
            border-bottom: 1px solid black;
            width: 71%;
            background-color: rgba(128,128,128,0.1);
            text-decoration:line-through;
            color:red;
        }
    </style>
</head>

<body>
    <div id="content" style="margin:0px auto;width:70%;position:relative">
        <h2 style="text-align:center">Certificate Master Details</h2>
        @if (ViewBag.CertificatesManagement.IsVoid)//作废的
        {
            <div id="@ViewBag.CertificatesManagement.CMSerial" name="CMSerial" class="panel-heading col-sm-11">
                <label id="@ViewBag.CertificatesManagement.CMSerial" name="CMSerial">认证代码<br />Cert-code</label>：
                <div id="CertCode" class="textVoid">@ViewBag.CertificatesManagement.CertCode</div>
            </div>
            <div class="panel-heading col-sm-11" >
                <label>认证名称<br />Cert-Name</label>：
                <div id="CertName" class="textVoid">@ViewBag.CertificatesManagement.CertName</div>
            </div>
            <div class="panel-heading col-sm-11" style="position:relative">
                <label>适用国家/区域<br />For Country/Area</label>：
                <div name="CountryArea" class="textVoid" style="width:61%">@ViewBag.CertificatesManagement.CountryArea</div>
            </div>
            <div class="panel-heading col-sm-11 ">
                <label>标准费用<br />Standard Fees</label>：
                <label style="text-decoration:line-through;color:red">USD$</label> <div id="StandardFees" class="textVoid" style="width:30%"> @ViewBag.CertificatesManagement.StdFee</div>
            </div>
            <div class="panel-heading col-sm-11 " >
                <label>标准测试日<br />Standard Time</label>：
                <div id="StandardTime" class="textVoid" style="width:30%">@ViewBag.CertificatesManagement.StdTime</div> <label>weeks</label> 
            </div>
            <div style="color:red;font-weight:700;position:absolute;top:56%;right:9%;display:inline-block">
                <h2>VOID</h2>
                <h2>已作废</h2>
            </div>
            <div class="panel-heading col-sm-11" style="position:relative">
                <label>备注<br />Remarks</label>：
                <div id="Remarks" class="textVoid" style="width:76%">
                    @ViewBag.CertificatesManagement.Remark
                </div>
            </div>
        }
        else//未作废的
        {
            <div id="@ViewBag.CertificatesManagement.CMSerial" name="CMSerial" class="panel-heading col-sm-11">
                <label  id="@ViewBag.CertificatesManagement.CMSerial" name="CMSerial">认证代码<br />Cert-code</label>：
                <div id="CertCode" class="text">@ViewBag.CertificatesManagement.CertCode</div>
            </div>
            <div class="panel-heading col-sm-11">
                <label>认证名称<br />Cert-Name</label>：
                <div id="CertName" class="text">@ViewBag.CertificatesManagement.CertName</div>
            </div>
            <div class="panel-heading col-sm-11" style="position:relative">
                <label>适用国家/区域<br />For Country/Area</label>：
                <div name="CountryArea" class="text" style="width:61%">@ViewBag.CertificatesManagement.CountryArea</div>
            </div>
            <div class="panel-heading col-sm-11">
                <label>标准费用<br />Standard Fees</label>：
                USD$ <div id="StandardFees" class="text" style="width:30%"> @ViewBag.CertificatesManagement.StdFee</div>
            </div>
            <div class="panel-heading col-sm-11">
                <label>标准测试日<br />Standard Time</label>：
                <div id="StandardTime" class="text" style="width:30%">@ViewBag.CertificatesManagement.StdTime</div>  weeks
            </div>
            <div class="panel-heading col-sm-11" style="position:relative">
                <label>备注<br />Remarks</label>：
                <div id="Remarks" class="text" style="width:76%">
                    @ViewBag.CertificatesManagement.Remark
                </div>
            </div>
        }

    </div>
</body>
</html>
